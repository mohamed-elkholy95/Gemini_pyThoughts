# Pythoughts Production Environment Configuration
# Copy to .env.production and fill in actual values

# ============================================
# Core Application
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
APP_URL=https://pythoughts.com
APP_NAME=Pythoughts

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://pythoughts:CHANGE_ME@localhost:5432/pythoughts
DB_PASSWORD=CHANGE_ME
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Redis Cache & Queue
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# Authentication (Better Auth)
# ============================================
BETTER_AUTH_SECRET=GENERATE_A_SECURE_64_CHAR_SECRET
BETTER_AUTH_URL=https://pythoughts.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAME_SITE=lax

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=https://pythoughts.com,https://www.pythoughts.com

# ============================================
# Email Service (SMTP)
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SENDGRID_API_KEY
EMAIL_FROM=noreply@pythoughts.com
EMAIL_FROM_NAME=Pythoughts

# ============================================
# File Storage (S3 Compatible)
# ============================================
S3_BUCKET=pythoughts-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=  # Leave empty for AWS, set for S3-compatible (MinIO, DigitalOcean Spaces)
UPLOAD_MAX_SIZE=10485760  # 10MB

# ============================================
# Security
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
GRAFANA_PASSWORD=CHANGE_ME
SENTRY_DSN=  # Optional: Sentry error tracking

# ============================================
# Worker Configuration
# ============================================
WORKER_CONCURRENCY=5
SCHEDULER_INTERVAL=60000  # Check scheduled posts every minute

# ============================================
# Feature Flags
# ============================================
FEATURE_WEBHOOKS=true
FEATURE_ANALYTICS=true
FEATURE_SCHEDULED_PUBLISHING=true
